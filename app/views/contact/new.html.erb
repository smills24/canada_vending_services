<%= form_for @email, :url => contact_path do |form| %>
  <fieldset class="fields">
    <div class="field">
      <%= form.label :name %><br>
      <%= form.text_field :name %>
    </div>
    
    <div class="field">
      <%= form.label :email %><br>
      <%= form.text_field :email %>
    </div>
    <div class="field">
      <%= form.label :subject %><br>
      <%= form.text_field :subject %>
    </div>
    
    <div class="field">
      <%= form.label :body %><br>
      <%= form.text_area :body %>
    </div>
  </fieldset>
  
  <fieldset class="actions">
    <%= form.submit "Send" %>
  </fieldset>
<% end %>
