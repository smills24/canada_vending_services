%html
  %head
    %title
      = @title
    = stylesheet_link_tag    "application"
    = javascript_include_tag "application"
    = csrf_meta_tags
%body
  %header
    #top-header
      .header_stuff
        .logo
          = image_tag('logo.png', :class => "header_img")
          .title Canada Vending Services 
        #nav-wrapper
          %nav.round
            %ul.round
              %li
                - if current_user
                  = link_to 'ACCOUNT', user_path(current_user)
                - else
                  = link_to 'LOGIN', login_path
              |
              %li
                = link_to 'SERVICES', services_path
              |
              %li
                = link_to 'PRODUCTS', products_path
              |
              %li
                = link_to 'EQUIPMENT', equipment_path
              |
              %li
                = link_to 'CONTACT', contact_path
    #bottom-header
  %section
    #content
      #content-box
        %h2 
          = @title
        - flash.each do |key, value|
          %div{:class => "flash #{key}"}= value
        =yield
        =debug(params) if Rails.env.development?
  %footer

